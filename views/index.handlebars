

    <div class="jumbotron">
        <h1>Scrape Articles</h1>
        <p>Scrape articles from the Smithsonian Magazine Website</p>
        <p>
            <a class="btn btn-primary btn-lg" href="#" role="button">Learn more</a>
        </p>
    </div>

    <div class="container">
        {{#each article}}
        <div class="row">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title">{{this.title}}</h3>
                </div>
                <div class="panel-body">
                    {{this.link}}
                    <form class="navbar-form navbar-left" method="POST" action="/articles/save/{{this.id}}">
                        <button type="submit" class="btn btn-default">Save Article</button>
                    </form>
                </div>
            </div>
        </div>
        {{/each}}
    </div>


</body>

</html>